{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@test/core": [
        "../../libs/core/src"
      ],
      "@test/core/*": [
        "../../libs/core/src/*"
      ]
    },
  },
  "include": ["src/*", "../../libs/*"],
  "exclude": ["node_modules", "dist"]
}